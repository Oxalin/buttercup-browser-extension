{
    "manifest_version": 2,

    "name": "Buttercup",
    "description": "Browser extension for Buttercup, the secure and easy-to-use password manager.",
    "version": "0.0.0",

    "icons": {
        "256": "buttercup-256.png",
        "128": "buttercup-128.png",
        "48": "buttercup-48.png",
        "16": "buttercup-16.png"
    },

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "browser_action": {
        "default_icon": "buttercup-256.png",
        "default_popup": "popup.html#/"
    },

    "content_scripts" : [
        {
            "matches": ["http://*/*", "https://*/*"],
            "run_at": "document_end",
            "all_frames": true,
            "js": ["tab.js"]
        }
    ],

    "permissions": [
        "clipboardWrite",
        "contextMenus",
        "http://*/*",
        "https://*/*",
        "storage",
        "tabs",
        "unlimitedStorage"
    ],

    "web_accessible_resources": [
        "*.png",
        "*.jpg"
    ],

    "applications": {
        "gecko": {
            "id": "{10e7d273-2e63-47c9-82af-76c45dc1b624}"
        }
    }
}
